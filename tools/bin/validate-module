#!/bin/bash

module_dir="$1"

validate() {
  set -e

  cd "$module_dir"
  terraform init -backend=false >/dev/null
  terraform validate -json | jq -r '.diagnostics[] | "\(.severity) \(.range.filename):\(.range.start.line) \(.summary). \(.detail)"'
}

validate_out=$(validate 2>&1)
validate_exit_code=$?

if [ $validate_exit_code -eq 0 ] && [ -z "$validate_out" ]; then
  echo "✅ $module_dir"
else
  echo "❌ $module_dir"
  [ -n "$CI" ] && echo "::group::$module_dir output"
  echo "$validate_out"
  [ -n "$CI" ] && echo "::endgroup::"
  exit $validate_exit_code
fi
